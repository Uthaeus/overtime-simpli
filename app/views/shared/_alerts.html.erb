<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "SimpliVerified Notification", sticky: false, image: :notice) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "SimpliVerified Notification", sticky: false, image: :notice) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "SimpliVerified Notification", sticky: false, image: :notice) %>
<% end %>
